<html>
  <head>
  <title>Contact Me!</title>
        <!-- Font -->
        <link
          rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
          integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
          crossorigin="anonymous"
          referrerpolicy="no-referrer"
        />
        <!-- Bootstrap -->
        <link
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
          crossorigin="anonymous"
        />
        <!-- CSS -->
        <link rel="stylesheet" href="css/all.css" />
        <link rel="icon" href="images/logo/crown.png">
  </head>
  <body>
    <!-- Nav Bar -->
    <nav class="p-3">
      <ul class="d-flex gap-5 container-fluid flex-nowrap align-items-center justify-content-start" >
        <!-- Logo Nav Bar -->
        <li>
          <a href="/">
            <img width="50" src="images/logo/crown.png" />
          </a>
        </li>

        <!-- Main Nav Bar -->
        <div class="d-flex gap-4 align-items-center w-100 d-none d-md-flex">
          <li>
            <a class="navLink" href="/">Home</a>
          </li>
          <li>
            <a class="navLink" href="add-projects">Add Projects</a>
          </li>
          <li class="ms-auto">
            <a class="btn main" href="contact">Contact Me</a>
          </li>
        </div>
        <div class="ms-auto d-block d-md-none">
          <button onclick="openNavbar(event)">
            <i class="fa-2xl fa-solid fa-bars"></i>
          </button>
        </div>
      </ul>
    </nav>

    <!-- Nav Bar Mobile -->
    <nav
      id="navbar__mobile"
      class="overflow-hidden d-md-none"
      style="height: 0"
    >
      <ul class="py-3 bg-white d-flex flex-column align-items-center gap-4">
        <li>
          <a href="/" class="navLink">Home</a>
        </li>
        <li>
          <a href="add-projects" class="navLink">Add Project</a>
        </li>
        <li>
          <a href="contact" class="btn main">Contact Me</a>
        </li>
      </ul>
    </nav>

    <!-- Main -->
    <main class="py-5" style="background-color: hsl(210 17% 91%)">
      <section>
        <h2 class="text-center pb-5 fw-bold">GET IN TOUCH</h2>
      </section>
      <!-- Form -->
      <form
        class="mx-auto d-flex flex-column gap-3 form__width"
        onsubmit="sendMail(event)"
      >
        <div class="d-flex flex-column gap-2">
          <label for="name">Name</label>
          <input
            type="text"
            name="name"
            id="name"
            class="bg-white shadow-lg p-2"
          />
        </div>
        <div class="d-flex flex-column gap-2">
          <label for="email">Email</label>
          <input
            type="email"
            name="email"
            id="email"
            class="bg-white shadow-lg p-2"
          />
        </div>
        <div class="d-flex flex-column gap-2">
          <label for="phone">Phone Number</label>
          <input
            type="tel"
            name="phone"
            id="phone"
            class="bg-white shadow-lg p-2"
          />
        </div>
        <div class="d-flex flex-column gap-2">
          <label for="subject">Subject</label>
          <select name="subject" id="subject" class="bg-white shadow-lg p-2">
            <option value=""> </option>
            <option value="Frontend">Frontend</option>
            <option value="Backend">Backend</option>
            <option value="Fullstack">Fullstack</option>
          </select>
        </div>
        <div class="d-flex flex-column gap-2">
          <label for="message">Your Message</label>
          <textarea
            name="message"
            id="message"
            class="bg-white shadow-lg p-2"
            style="height: 150px"
          ></textarea>
        </div>
        <div class="ms-auto my-5">
          <button type="submit" class="btn main">Submit</button>
        </div>
      </form>
    </main>
    <!-- Script -->
    <script src="js/contact.js"></script>
    <script src="js/navbar.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
      crossorigin="anonymous"
    ></script>
  </body>
</html>